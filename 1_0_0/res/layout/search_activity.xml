<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                style="?android:attr/listSeparatorTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/account" />

            <Spinner
                android:id="@+id/spinnerAccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <requestFocus />
            </Spinner>

            <TextView
                style="?android:attr/listSeparatorTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/transaction_type" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <CheckBox
                    android:id="@+id/checkBoxWithdrawal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:text="@string/withdrawal" />

                <CheckBox
                    android:id="@+id/checkBoxDeposit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:text="@string/deposit" />

                <CheckBox
                    android:id="@+id/checkBoxTransfer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:text="@string/transfer" />
            </LinearLayout>

            <TextView
                style="?android:attr/listSeparatorTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/transaction_status" />

            <Spinner
                android:id="@+id/spinnerStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:prompt="@string/status" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    style="?android:attr/listSeparatorTextViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/from" />

                <TextView
                    style="?android:attr/listSeparatorTextViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/to" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/editFromDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="@string/from"
                    android:inputType="date" />

                <ImageButton
                    android:id="@+id/buttonFromDate"
                    style="@style/Money.Button"
                    android:layout_width="@dimen/money_button_height"
                    android:layout_height="@dimen/money_button_height"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_action_calendar_day_dark" />

                <EditText
                    android:id="@+id/editToDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="@string/to"
                    android:inputType="date" />

                <ImageButton
                    android:id="@+id/buttonToDate"
                    style="@style/Money.Button"
                    android:layout_width="@dimen/money_button_height"
                    android:layout_height="@dimen/money_button_height"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_action_calendar_day_dark" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutPayee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textViewPayee"
                    style="?android:attr/listSeparatorTextViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/payee" />

                <Button
                    android:id="@+id/buttonSelectPayee"
                    style="@style/Money.Button"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/money_button_height"
                    android:text="@string/select_payee" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutToAccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone" >

                <TextView
                    style="?android:attr/listSeparatorTextViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/to" />

                <Button
                    android:id="@+id/buttonSelectToAccount"
                    style="@style/Money.Button"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/money_button_height"
                    android:text="@string/select_to_account" />
            </LinearLayout>

            <TextView
                style="?android:attr/listSeparatorTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/category" />

            <Button
                android:id="@+id/buttonSelectCategory"
                style="@style/Money.Button"
                android:layout_width="match_parent"
                android:layout_height="@dimen/money_button_height"
                android:text="@string/select_category" />

            <TextView
                android:id="@+id/textViewTotAmount"
                style="?android:attr/listSeparatorTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/amount" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/editTextFromAmount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="@string/from"
                    android:inputType="numberDecimal" />

                <EditText
                    android:id="@+id/editTextToAmount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="@string/to"
                    android:inputType="numberDecimal" />
            </LinearLayout>

            <TextView
                style="?android:attr/listSeparatorTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/transaction_number" />

            <EditText
                android:id="@+id/editTextTransNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/transaction_number"
                android:inputType="number" />

            <TextView
                style="?android:attr/listSeparatorTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/notes" />

            <EditText
                android:id="@+id/editTextNotes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top|left"
                android:hint="@string/notes"
                android:inputType="textMultiLine"
                android:lines="5"
                android:maxLength="1000"
                android:scrollHorizontally="false" >
            </EditText>
        </LinearLayout>
    </ScrollView>

</LinearLayout>