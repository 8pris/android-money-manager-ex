<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.money.manager.ex"
    android:versionCode="109"
    android:versionName="0.9.2" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="14" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:name=".MoneyManagerApplication"
        android:icon="@drawable/ic_launcher"
        android:label="@string/application_name"
        android:theme="@style/Theme.Money.Manager" >
        <receiver
            android:name=".widget.ButtonAddTransactionWidgetProvider"
            android:label="@string/widget_add_transaction" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_button_add_transaction" >
            </meta-data>
        </receiver>
        <receiver
            android:name=".widget.SummaryWidgetProvider"
            android:label="@string/widget_summary" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_summary" >
            </meta-data>
        </receiver>
        <receiver
            android:name=".widget.AccountBillsWidgetProvider"
            android:label="@string/widget_all_accounts" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_account_bills" >
            </meta-data>
        </receiver>

        <service
            android:name=".widget.AccountBillsWidgetService"
            android:permission="android.permission.BIND_REMOTEVIEWS" />

        <provider
            android:name=".MoneyManagerProvider"
            android:authorities="com.money.manager.ex.provider" >
        </provider>

        <activity
            android:name="MainActivity"
            android:label="@string/application_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <action android:name="android.intent.action.EDIT" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="*"
                    android:mimeType="*/*"
                    android:pathPattern=".*\\.mmb"
                    android:scheme="http" />
                <data
                    android:host="*"
                    android:mimeType="*/*"
                    android:pathPattern=".*\\.mmb"
                    android:scheme="https" />
                <data
                    android:host="*"
                    android:mimeType="*/*"
                    android:pathPattern=".*\\.mmb"
                    android:scheme="content" />
                <data
                    android:host="*"
                    android:mimeType="*/*"
                    android:pathPattern=".*\\.mmb"
                    android:scheme="file" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.dropbox.client2.android.AuthActivity"
            android:configChanges="orientation|keyboard|screenSize"
            android:launchMode="singleTask" >
            <intent-filter>

                <!-- Change this to be db- followed by your app key -->
                <data android:scheme="db-cakbv9zh9l083ep" />

                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".dropbox.DropboxActivity"
            android:label="Sync Dropbox" >
        </activity>
        <activity android:name="FileBrowseActivity" >
            <intent-filter>
                <action android:name="com.money.manager.ex.custom.intent.action.VIEW_FILE" />
                <action android:name="com.money.manager.ex.custom.intent.action.VIEW_FOLDER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CheckingAccountActivity"
            android:label="@string/new_edit_transaction" >
            <action android:name="android.intent.action.EDIT" />
            <action android:name="android.intent.action.INSERT" />
        </activity>
        <activity
            android:name=".PayeeActivity"
            android:label="@string/payee" >
            <action android:name="android.intent.action.PICK" />
            <action android:name="android.intent.action.EDIT" />
        </activity>
        <activity
            android:name=".AccountListActivity"
            android:label="@string/account_list" >
            <action android:name="android.intent.action.PICK" />
            <action android:name="android.intent.action.EDIT" />
        </activity>
        <activity
            android:name=".CategorySubCategoryActivity"
            android:label="@string/category" >
            <action android:name="android.intent.action.PICK" />
            <action android:name="android.intent.action.EDIT" />
        </activity>
        <activity
            android:name=".CurrencyFormatsListActivity"
            android:label="@string/currency" >
            <action android:name="android.intent.action.PICK" />
            <action android:name="android.intent.action.EDIT" />
        </activity>
        <activity
            android:name=".AboutActivity"
            android:label="@string/about" >
        </activity>
        <activity
            android:name=".CurrencyFormatsActivity"
            android:label="@string/new_edit_currency" >
            <action android:name="android.intent.action.EDIT" />
            <action android:name="android.intent.action.INSERT" />
        </activity>
        <activity
            android:name=".AccountListEditActivity"
            android:label="@string/account_list" >
            <action android:name="android.intent.action.EDIT" />
            <action android:name="android.intent.action.INSERT" />
        </activity>
        <activity android:name=".IntroductionActivity" />
        <activity
            android:name=".RepeatingTransactionListActivity"
            android:label="@string/repeating_transaction" />
        <activity
            android:name=".RepeatingTransactionActivity"
            android:label="@string/new_edit_repeating_transaction" >
            <action android:name="android.intent.action.EDIT" />
            <action android:name="android.intent.action.INSERT" />
        </activity>
        <activity
            android:name=".settings.PreferencesActivity"
            android:label="@string/settings" >
        </activity>
        <activity android:name=".PasscodeActivity" >
            <intent-filter>
                <action android:name="com.money.manager.ex.custom.intent.action.REQUEST_PASSWORD" />
            </intent-filter>
        </activity>
        <activity
            android:name=".reports.IncomeVsExpensesActivity"
            android:label="@string/menu_report_income_vs_expenses" />
        <activity
            android:name=".reports.PayeeReportActivity"
            android:label="@string/payee" >
        </activity>
    </application>

</manifest>