<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Money.Button" parent="android:Widget.Button">
        <item name="android:background">@color/md_primary</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Button</item>
        <item name="android:elevation">@dimen/money_elevation</item>
    </style>

    <style name="Money.TextView" parent="android:Widget.TextView">
        <item name="android:tag">@string/view_user_size</item>
    </style>

    <style name="Money.TextView.ListSeparator" parent="Money.TextView">
        <item name="android:drawableBottom">@drawable/list_separator_text_view_style_drawable</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/holo_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Money.TextView.Header" parent="Money.TextView">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/md_secondary_text</item>
    </style>

    <style name="Money.TextView.Header.Caption" parent="Money.TextView.Header">
        <item name="android:drawablePadding">4dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Money.TextView.Widget.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:ellipsize">end</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:layout_marginTop">@dimen/money_margin_top_textview_widget_edittext</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="SpinnerApp_Light_DarkActionBar" parent="android:Widget.Holo.Light.Spinner">
        <item name="android:background">@drawable/app_light_darkactionbar_spinner_background_holo_light</item>
        <item name="android:dropDownSelector">@drawable/app_light_darkactionbar_list_selector_holo_light</item>
    </style>

    <style name="EditEventCustomActionButton" parent="android:style/Widget.Holo.Light.ActionButton">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:focusable">true</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="EditEventCustomActionButtonImage">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="EditEventCustomActionButtonText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textAppearance">?android:attr/actionMenuTextAppearance</item>
        <item name="android:textColor">@color/md_primary_light</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">none</item>
        <item name="android:padding">4dp</item>
    </style>

</resources>