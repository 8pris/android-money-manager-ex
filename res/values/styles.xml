<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme.Money.Manager" parent="@style/Theme.Sherlock">
        <item name="ic_action_calendar_day">@drawable/ic_action_calendar_day_dark</item>
    </style>
    <style name="Theme.Money.Manager.Light" parent="@style/Theme.Sherlock.Light.DarkActionBar">
        <item name="ic_action_calendar_day">@drawable/ic_action_calendar_day_light</item>
    </style>

    <style name="Money.TextView" parent="@android:style/Widget.TextView">
        <!-- <item name="android:textColor">@color/textview_textcolor</item> -->
    </style>

    <style name="Money.TextView.Medium" parent="Money.TextView">
        <item name="android:textSize">@dimen/money_text_view_size_medium</item>
    </style>

    <style name="Money.Button" parent="android:Widget.Button">
        <item name="android:background">@drawable/button_green</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:shadowColor">@android:color/black</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Money.Button.Medium" parent="Money.Button">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Money.Button.Medium.Bold" parent="Money.Button.Medium">
        <item name="android:textStyle">bold</item>
    </style>

</resources>