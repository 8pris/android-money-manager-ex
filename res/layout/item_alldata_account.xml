<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.money.manager.ex"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.money.manager.ex.view.RobotoTextView
        android:id="@+id/textViewAccountName"
        style="?attr/listSeparatorTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textStyle="bold"
        android:visibility="gone"
         />

    <com.money.manager.ex.view.RobotoTextView
        android:id="@+id/textViewDateGroup"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:visibility="gone"
         />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/money_margin_middle"
        android:layout_marginLeft="@dimen/money_margin"
        android:layout_marginRight="@dimen/money_margin"
        android:layout_marginTop="@dimen/money_margin_middle"
        android:background="?attr/shape_white_background_shadow"
        android:orientation="vertical" >

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/shape_rectangle_backgroud_dark"
            android:orientation="horizontal"
            android:stretchColumns="1" >

            <TableRow android:padding="@dimen/money_padding" >

                <com.money.manager.ex.view.RobotoTextView
                    android:id="@+id/textViewStatus"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_column="0"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:singleLine="true"
                    android:textStyle="bold"
                     />

                <com.money.manager.ex.view.RobotoTextView
                    android:id="@+id/textViewDeposit"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_column="1"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textColor="?attr/holo_green_color_theme"
                    android:textStyle="bold"
                     />

                <com.money.manager.ex.view.RobotoTextView
                    android:id="@+id/textViewTransfer"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_column="2"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textColor="?attr/holo_red_color_theme"
                    android:textStyle="bold"
                     />

                <com.money.manager.ex.view.RobotoTextView
                    android:id="@+id/textViewBalance"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_column="3"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:singleLine="true"
                    android:textStyle="italic"
                    android:visibility="gone"
                    app:typeface="roboto_condensed_italic" />
            </TableRow>
        </TableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/money_padding" >

            <ImageView
                android:id="@+id/imageViewFollowUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:src="@drawable/light_bulb"
                android:visibility="gone" />

            <com.money.manager.ex.view.RobotoTextView
                android:id="@+id/textViewPayee"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                 />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutToAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/money_padding"
            android:visibility="gone" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrows_reload_icon" />

            <com.money.manager.ex.view.RobotoTextView
                android:id="@+id/textViewToAccountName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                 />
        </LinearLayout>

        <com.money.manager.ex.view.RobotoTextView
            android:id="@+id/textViewCategorySub"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/money_padding"
             />

        <com.money.manager.ex.view.RobotoTextView
            android:id="@+id/textViewNotes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/money_padding"
            android:singleLine="true"
            android:textStyle="italic"
            android:visibility="gone"
            app:typeface="roboto_condensed_italic" />
    </LinearLayout>

</LinearLayout>