<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.money.manager.ex"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/money_background"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/money_margin"
        android:layout_weight="1"
        android:background="@drawable/shape_white_background_shadow"
        android:orientation="vertical"
        android:padding="@dimen/money_padding" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <com.money.manager.ex.view.RobotoTextView
                style="@style/listSeparatorTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/account" />

            <Spinner
                android:id="@+id/spinnerAccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <requestFocus />
            </Spinner>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal" >

                <com.money.manager.ex.view.RobotoTextView
                    style="@style/listSeparatorTextViewStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/transaction_type" />

                <com.money.manager.ex.view.RobotoTextView
                    style="@style/listSeparatorTextViewStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/transaction_status" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal" >

                <Spinner
                    android:id="@+id/spinnerTransCode"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:prompt="@string/transaction_type" >
                </Spinner>

                <Spinner
                    android:id="@+id/spinnerStatus"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:prompt="@string/status" />
            </LinearLayout>

            <com.money.manager.ex.view.RobotoTextView
                style="@style/listSeparatorTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/date" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <com.money.manager.ex.view.RobotoEditText
                    android:id="@+id/editDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="@string/next_occurrence"
                    android:inputType="date" />

                <ImageButton
                    android:id="@+id/buttonDate"
                    style="@style/Money.Button"
                    android:layout_width="@dimen/money_button_height"
                    android:layout_height="@dimen/money_button_height"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_action_calendar_day_dark"
                    android:text="..." />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutPayee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <com.money.manager.ex.view.RobotoTextView
                    android:id="@+id/textViewPayee"
                    style="@style/listSeparatorTextViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/payee" />

                <com.money.manager.ex.view.RobotoButton
                    android:id="@+id/buttonSelectPayee"
                    style="@style/Money.Button"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/money_button_height"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:text="@string/select_payee"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutToAccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone" >

                <com.money.manager.ex.view.RobotoTextView
                    style="@style/listSeparatorTextViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/to" />

                <com.money.manager.ex.view.RobotoButton
                    android:id="@+id/buttonSelectToAccount"
                    style="@style/Money.Button"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/money_button_height"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:text="@string/select_to_account"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <com.money.manager.ex.view.RobotoTextView
                    style="@style/listSeparatorTextViewStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="@string/category" />

                <CheckBox
                    android:id="@+id/checkBoxSplitTransaction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:text="@string/split" />
            </LinearLayout>

            <com.money.manager.ex.view.RobotoButton
                android:id="@+id/buttonSelectCategory"
                style="@style/Money.Button"
                android:layout_width="match_parent"
                android:layout_height="@dimen/money_button_height"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:text="@string/select_category"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal" >

                <com.money.manager.ex.view.RobotoTextView
                    android:id="@+id/textViewTotAmount"
                    style="@style/listSeparatorTextViewStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/total_amount" />

                <com.money.manager.ex.view.RobotoTextView
                    android:id="@+id/textViewAmount"
                    style="@style/listSeparatorTextViewStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/amount" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal" >

                <com.money.manager.ex.view.RobotoEditText
                    android:id="@+id/editTextTotAmount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:gravity="right"
                    android:hint="@string/total_amount"
                    android:inputType="numberDecimal" />

                <com.money.manager.ex.view.RobotoEditText
                    android:id="@+id/editTextAmount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:gravity="right"
                    android:hint="@string/amount"
                    android:inputType="numberDecimal" />
            </LinearLayout>

            <com.money.manager.ex.view.RobotoTextView
                style="@style/listSeparatorTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/transaction_number" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal" >

                <com.money.manager.ex.view.RobotoEditText
                    android:id="@+id/editTextTransNumber"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:gravity="right"
                    android:hint="@string/transaction_number"
                    android:inputType="number" />

                <ImageButton
                    android:id="@+id/buttonTransNumber"
                    style="@style/Money.Button"
                    android:layout_width="@dimen/money_button_height"
                    android:layout_height="@dimen/money_button_height"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_action_plusone_dark" />
            </LinearLayout>

            <com.money.manager.ex.view.RobotoTextView
                style="@style/listSeparatorTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/notes" />

            <com.money.manager.ex.view.RobotoEditText
                android:id="@+id/editTextNotes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top|left"
                android:hint="@string/notes"
                android:inputType="textMultiLine"
                android:lines="5"
                android:maxLength="1000"
                android:scrollHorizontally="false" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <com.money.manager.ex.view.RobotoButton
            android:id="@+id/buttonCancel"
            style="@style/Money.Button"
            android:layout_width="0dip"
            android:layout_height="@dimen/money_button_height"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_action_cancel_dark"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="@android:string/cancel"
            android:textSize="@dimen/money_text_view_size_small"
            android:textStyle="bold" />

        <com.money.manager.ex.view.RobotoButton
            android:id="@+id/buttonOk"
            style="@style/Money.Button"
            android:layout_width="0dip"
            android:layout_height="@dimen/money_button_height"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_action_tick_dark"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="@android:string/ok"
            android:textSize="@dimen/money_text_view_size_small"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>